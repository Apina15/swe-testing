<div class="top-button">
  <button type="button"><%= link_to("Back to Users Page", users_path, :class => 'back-link') %></button>
</div>

<div class = "container">
  <h1> Delete user? </h1>

  <%= form_for(@user, :method => 'delete') do |f| %>

  <p>Are you sure you want to delete this user?</p>

  <p> <%= f.object.first_name %> <%= f.object.last_name %></p>

  <div class = "form-buttons">
    <%= f.submit("Delete user") %>
  </div>

  <% end %>

</div>
