<div class="top-button">
<button type="button"><%= link_to("Back to Users Page", users_path, :class => 'back-link') %></button>
</div>

<div class="container">

  <div class="row">
  <div class="col" align="center">
    <div class="Titles">
      New User
    </div>
  </div>
  </div>

<% if !!flash[:errors] %>
  <% flash[:errors].each do |e| %>
    <p style="color: red"><%= e %></p> <br>
  <% end %>
<% end %>
<%= form_for(@user) do |f| %>

    <table class="table">
      <tr>
        <th>First Name:</th>
        <td><%= f.text_field(:first_name)%></td>
      </tr>
      <tr>
        <th>Last Name:</th>
        <td><%= f.text_field(:last_name)%></td>
      </tr>
      <tr>
        <th>Email:</th>
        <td><%= f.text_field(:email)%></td>
      </tr>
      <tr>
        <th>Password:</th>
        <td><%= f.password_field(:password)%></td>
      </tr>

    </table>

<div class="form-buttons" align="center">
<%= f.submit("Submit") %>
</div>
<% end %>
</div>
