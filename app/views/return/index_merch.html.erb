<div class= "top-button">
  <button type="button"><%= link_to("Back to My Items Page", checkout_myItems_path, :class => 'back-link') %></button>
</div>

<% if flash[:notice]%>
  <p style="color: red"><%= notice%></p>
<%end%>

<div class = "container">
  <h1>Return Item Form</h1>

  <%= form_tag({:action => 'submit', :id => @checkout.id}, :method => :post) do %>
    <table class="table" summary = "item details">
      <tr>
        <th>Name</th>
        <td><%= @item.name %></td>
      </tr>
      <tr>
        <th>Description</th>
        <td><%= @item.description %></td>
      </tr>
      <tr>
      <tr>
        <th>Your Stock</th>
        <td><%= @checkout.amount %></td>
      </tr>
      <tr>
        <th>Return Amount</th>
        <td><%= text_field_tag(:return_amount) %></td>
      </tr>
      <tr>
        <th>Sold</th>
        <td><%= text_field_tag(:sold) %></td>
      </tr>
    </table>
    <%= submit_tag("Submit") %>
  <% end %>
</div>
