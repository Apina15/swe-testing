<div class="top-button">
  <button type="button"><%= link_to("Back to Inventory Page", items_path, :class => 'back-link') %></button>
</div>

<div class = "container">
  <div class="row">
  <div class="col" align="center">
    <div class="Titles">
      Checkout Item
    </div>
  </div>
  </div>

  <%= form_tag({:action => 'submit', :id => @item.id, :uid => session[:user_id]}, :method => :post) do %>
    <table class="table" summary = "item details">
      <tr>
        <th>Name</th>
        <td><%= @item.name %></td>
      </tr>
      <tr>
        <th>Description</th>
        <td><%= @item.description %></td>
      </tr>
      <tr>
        <th>Total Stock</th>
        <td><%= @item.total_stock %></td>
      </tr>
      <tr>
        <th>Available Stock</th>
        <td><%= @item.avail_stock %></td>
      </tr>
      <tr>
        <th>Quantity</th>
        <td><%= text_field_tag(:checkout_amount) %></td>
      </tr>
      <tr>
        <th>Event</th>
        <td><%= text_field_tag(:event) %></td>
      </tr>
    </table>

    <div class="form-buttons" align="center">
    <%= submit_tag("Submit") %>
    </div>
  <% end %>
</div>
