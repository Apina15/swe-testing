<div class = "top-button">
  <button type="button"><%= link_to("Back to Inventory Page", items_path, :class => 'back-link') %></button>
</div>

<div class = "container">
  <h1>Update Item</h1>

  <%= form_for(@item) do |f| %>

  <table class="table" summary = "item form fields">
    <tr>
      <th>Item Name</th>
      <td><%= f.text_field(:name) %></td>
    </tr>
    <tr>
      <th>Description</th>
      <td><%= f.text_field(:description) %></td>
    </tr>
    <tr>
      <th>Total Stock</th>
      <td><%= f.text_field(:total_stock) %></td>
    </tr>
    <tr>
      <th>Available Stock</th>
      <td><%= f.text_field(:avail_stock) %></td>
    </tr>
    <tr>
      <th>Location</th>
      <td><%= f.text_field(:location) %></td>
    </tr>
    <tr>
      <th>Is this merchandise?</th>
      <td><%= f.select :merch, ['No', 'Yes'] %></td>
    </tr>
  </table>
<%= f.submit("Update item") %>
  <% end %>
</div>
