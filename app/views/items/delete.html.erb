<div class="container-fluid">

  <div class = "top-button">
    <button type="button"><%= link_to("Back to Item Page", item_path(@item), :class => 'back-link') %></button>
  </div>

  <div class="row">
    <div class="col" align="center">
      <div class="Titles">
        Delete Item
      </div>
    </div>
  </div>

  <div class="row">
    <div class="col" align="center">
      <div class="card" style="margin-top:2%; width:50%; margin-left:0%;" align="center">
        <div class="card-body">
          <%= form_for(@item, :method => 'delete') do |f| %>
          <h1><%= f.object.name %></h1>
          <p>Are you sure you want to delete this item?</p>
          <div class="form-buttons">
            <%= f.submit("Submit") %>
           </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>