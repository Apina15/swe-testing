<div class = "top-button">
  <button type="button"><%= link_to("Back to Item Page", item_path(@item), :class => 'back-link') %></button>
</div>

<div class = "container">
  <h1>Delete Item</h1>

  <%= form_for(@item, :method => 'delete') do |f| %>

  <p>Are you sure you want to delete this item?</p>

  <p> <%= f.object.name %> </p>

  <div class = "form-buttons">
    <%= f.submit("Delete item") %>
  </div>

  <% end %>

</div>
